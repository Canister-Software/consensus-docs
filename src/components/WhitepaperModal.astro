---
const id = "whitepaper-dialog";
const endpoint = "https://consensus.canister.software:8888/hook/whitepaper-signup";
---

<dialog id={id} class="wp" aria-labelledby="wp-title">
  <div class="wp__shell" role="document">
    <header class="wp__header">
      <div class="wp__brand" aria-hidden="true"></div>
      <div class="wp__heading">
        <p class="wp__eyebrow">Consensus Protocol</p>
        <h2 id="wp-title" class="wp__title">I am, You are, We are Consensus.</h2>
        <p class="wp__sub">Consensus is a peer-to-peer network.</p>
      </div>

      <button type="button" class="wp__x" data-wp-close aria-label="Close">Ã—</button>
    </header>

    <form
      id="wp-form"
      class="wp__form"
      method="post"
      action={endpoint}
    >
      <div class="wp__pitch">
        <p class="wp__lead">
          The Consensus whitepaper describes a protocol for coordinating HTTP and websocket execution across independent nodes, enabling deterministic outcomes without centralized control. It outlines:
        </p>
        <ul class="wp__points">
          <li>The problem space, protocol approach, and primary use cases</li>
          <li>Network topology, security boundaries, and trust assumptions</li>
          <li>Economic incentives, token design, and node participation criteria</li>
        </ul>
      </div>

      <label class="wp__label" for="wp-name">Name</label>
      <input id="wp-name" name="name" type="text" autocomplete="name" required />

      <label class="wp__label" for="wp-email">Email</label>
      <input
        id="wp-email"
        name="email"
        type="email"
        inputmode="email"
        autocomplete="email"
        required
      />

      <!-- Honeypot (optional but recommended) -->
      <input
        name="hp"
        type="text"
        autocomplete="off"
        tabindex="-1"
        style="position:absolute;left:-9999px;top:-9999px;"
        aria-hidden="true"
      />

      <div class="wp__actions">
        <button type="button" class="wp__btn wp__btn--ghost" data-wp-close>Not now</button>
        <button type="submit" class="wp__btn wp__btn--solid">Request access</button>
      </div>

      <div
        id="wp-status"
        class="wp__status"
        data-state=""
        role="status"
        aria-live="polite"
        hidden
      >
        <span id="wp-spinner" class="wp__spinner" aria-hidden="true"></span>
        <span id="wp-status-text"></span>
      </div>
    </form>
  </div>
</dialog>

<script is:inline>
  const dialog = document.getElementById("whitepaper-dialog");
  const form = document.getElementById("wp-form");
  const status = document.getElementById("wp-status");
  const statusText = document.getElementById("wp-status-text");
  const shell = dialog?.querySelector(".wp__shell");
  const nameInput = document.getElementById("wp-name");
  const emailInput = document.getElementById("wp-email");
  const submitBtn = form?.querySelector("button[type='submit']");
  const closeBtn = form?.querySelector("[data-wp-close]");

  const emailRegex = /^[^\s@]+@[^\s@]+\.[^\s@]+$/;

  const openIfHashMatches = () => {
    if (location.hash === "#whitepaper") dialog?.showModal();
  };

  const clearHash = () => {
    if (location.hash === "#whitepaper") history.replaceState(null, "", location.pathname);
  };

  const setStatus = (message, state) => {
    if (!status || !statusText) return;
    if (!message) {
      status.hidden = true;
      statusText.textContent = "";
      status.dataset.state = "";
      status.removeAttribute("aria-busy");
      return;
    }

    status.hidden = false;
    statusText.textContent = message;
    status.dataset.state = state || "";
    if (state === "loading") status.setAttribute("aria-busy", "true");
    else status.removeAttribute("aria-busy");
  };

  const setLoading = (isLoading) => {
    if (submitBtn) submitBtn.disabled = isLoading;
    if (closeBtn) closeBtn.disabled = isLoading;
    if (form) form.setAttribute("aria-busy", isLoading ? "true" : "false");
  };

  const resetForm = () => {
    form?.reset();
    setStatus("", "");
    setLoading(false);
  };

  const closeDialog = () => {
    dialog?.close();
    resetForm();
    clearHash();
  };

  openIfHashMatches();
  window.addEventListener("hashchange", openIfHashMatches);

  dialog?.addEventListener("cancel", (e) => {
    e.preventDefault();
    closeDialog();
  });

  dialog?.addEventListener("click", (e) => {
    if (!shell) {
      if (e.target === dialog) closeDialog();
      return;
    }
    if (e.target instanceof Node && !shell.contains(e.target)) closeDialog();
  });

  dialog?.querySelectorAll("[data-wp-close]")?.forEach((btn) => {
    btn.addEventListener("click", closeDialog);
  });

  dialog?.addEventListener("close", clearHash);

  const stripNameDigits = () => {
    if (!nameInput) return;
    const next = nameInput.value.replace(/[0-9]/g, "");
    if (next !== nameInput.value) nameInput.value = next;
  };

  nameInput?.addEventListener("keydown", (e) => {
    if (e.key >= "0" && e.key <= "9") e.preventDefault();
  });

  nameInput?.addEventListener("input", stripNameDigits);

  const isEmailValid = () => {
    if (!emailInput) return false;
    const value = emailInput.value.trim();
    return emailRegex.test(value);
  };

  form?.addEventListener("submit", async (e) => {
    e.preventDefault();

    const fd = new FormData(form);
    const name = String(fd.get("name") || "").trim();
    const email = String(fd.get("email") || "").trim();

    if (!name || !email) return;

    if (!isEmailValid()) {
      setStatus("Invalid email format", "error");
      return;
    }

    try {
      setStatus("Saving to wait list...", "loading");
      setLoading(true);

      const endpoint = form?.getAttribute("action");
      if (!endpoint) throw new Error("Missing endpoint");

      const payload = {
        name,
        email,
        hp: String(fd.get("hp") || ""),
      };

      const res = await fetch(endpoint, {
        method: "POST",
        headers: { "Content-Type": "application/json" },
        body: JSON.stringify(payload),
      });

      if (!res.ok) {
        const errPayload = await res.json().catch(() => null);
        throw new Error(errPayload?.error || "Request failed");
      }

      setStatus("Added to wait list. Opening protocol details...", "success");
      setLoading(false);

      setTimeout(() => {
        clearHash();
        window.location.href = "/protocol/info";
      }, 5000);
    } catch (err) {
      setStatus(err instanceof Error ? err.message : "Save failed", "error");
      setLoading(false);
    }
  });
</script>


<style>
  :root {
    --wp-bg: #fff;
    --wp-fg: #000;
    --wp-muted: #6b6b6b;
  }

  :root[data-theme="dark"] {
    --wp-bg: #000;
    --wp-fg: #fff;
    --wp-muted: #b5b5b5;
  }

  :root[data-theme="light"] {
    --wp-bg: #fff;
    --wp-fg: #000;
    --wp-muted: #6b6b6b;
  }

  @media (prefers-color-scheme: dark) {
    :root:not([data-theme="light"]) {
      --wp-bg: #000;
      --wp-fg: #fff;
      --wp-muted: #b5b5b5;
    }
  }

  .wp {
    padding: 0;
    border: 0;
    background: transparent;
    width: 100vw;
    max-width: 100vw;
    height: 100vh;
    max-height: 100vh;
    margin: 0;
    overflow: auto;
  }

  .wp[open] {
    display: grid;
    place-items: start center;
    padding: 10vh 0 4vh;
  }

  .wp::backdrop {
    background: rgba(0, 0, 0, 0.72);
  }

  .wp__shell {
    width: min(520px, calc(100vw - 2rem));
    margin: 0;
    background: var(--wp-bg);
    color: var(--wp-fg);
    border: 1px solid var(--wp-fg);
    border-radius: 18px;
    box-shadow: 0 24px 60px rgba(0, 0, 0, 0.35);
    max-height: calc(100vh - 12vh);
    overflow: auto;
    overscroll-behavior: contain;
    -webkit-overflow-scrolling: touch;
  }

  .wp__header {
    display: grid;
    grid-template-columns: 40px 1fr 40px;
    gap: 12px;
    align-items: center;
    padding: 16px 16px 12px;
    border-bottom: 1px solid var(--wp-fg);
  }

  .wp__brand {
    width: 40px;
    height: 40px;
    display: grid;
    place-items: center;
    background: center / 28px 28px no-repeat;
    background-image: url("../assets/logo-dark.svg");
  }

  :root[data-theme="dark"] .wp__brand {
    background-image: url("../assets/logo-light.svg");
  }

  :root[data-theme="light"] .wp__brand {
    background-image: url("../assets/logo-dark.svg");
  }

  @media (prefers-color-scheme: dark) {
    :root:not([data-theme="light"]) .wp__brand {
      background-image: url("../assets/logo-light.svg");
    }
  }

  .wp__title {
    margin: 0;
    font-size: 20px;
    line-height: 1.15;
    letter-spacing: -0.02em;
  }

  .wp__sub {
    margin: 4px 0 0;
    font-size: 12px;
    line-height: 1.2;
    opacity: 0.75;
  }

  .wp__eyebrow {
    margin: 0 0 4px;
    font-size: 11px;
    letter-spacing: 0.18em;
    text-transform: uppercase;
    opacity: 0.6;
  }

  .wp__x {
    width: 40px;
    height: 40px;
    border: 0;
    background: transparent;
    color: var(--wp-fg);
    font-size: 22px;
    line-height: 1;
    cursor: pointer;
    border-radius: 10px;
  }

  .wp__x:focus-visible {
    outline: 2px solid var(--wp-fg);
    outline-offset: 2px;
  }

  .wp__form {
    display: grid;
    gap: 10px;
    padding: 14px 16px 18px;
  }

  .wp__pitch {
    display: grid;
    gap: 8px;
    padding: 0 0 6px;
  }

  .wp__lead {
    margin: 0;
    font-size: 14px;
    line-height: 1.45;
  }

  .wp__points {
    margin: 0;
    padding-left: 18px;
    font-size: 13px;
    line-height: 1.4;
    opacity: 0.9;
  }

  .wp__points li + li {
    margin-top: 4px;
  }

  .wp__label {
    font-size: 13px;
    line-height: 1.2;
    opacity: 0.85;
  }

  .wp__form input,
  .wp__form select {
    width: 100%;
    padding: 12px 12px;
    border-radius: 12px;
    border: 1px solid var(--wp-fg);
    background: var(--wp-bg);
    color: var(--wp-fg);
  }

  .wp__form input::placeholder {
    color: var(--wp-fg);
    opacity: 0.5;
  }

    .wp__actions {
    display: flex;
    justify-content: space-between;
    align-items: center;
    gap: 12px;
    padding-top: 10px;
    }


  .wp__btn {
  height: 44px;
  padding: 0 18px;
  border-radius: 12px;
  font-weight: 600;
  border: 1px solid var(--wp-fg);
  cursor: pointer;
  display: inline-flex;
  align-items: center;
  justify-content: center;
  white-space: nowrap;
}


.wp__btn--solid {
  background: var(--wp-fg);
  color: var(--wp-bg);
}

.wp__btn--ghost {
  background: transparent;
  color: var(--wp-muted);
  border-color: transparent;
}


  .wp__btn:focus-visible {
    outline: 2px solid var(--wp-fg);
    outline-offset: 2px;
  }

  .wp__status {
    display: inline-flex;
    align-items: center;
    gap: 8px;
    margin: 2px 0 0;
    font-size: 13px;
    font-weight: 600;
    color: var(--wp-muted);
    justify-content: center;
    width: 100%;
    min-height: 22px;
  }

  .wp__status[data-state="success"],
  .wp__status[data-state="error"] {
    color: var(--wp-fg);
  }

  .wp__spinner {
    width: 22px;
    height: 22px;
    background: center / contain no-repeat;
    background-image: url("../assets/logo-dark.svg");
    animation: wp-spin 1.1s linear infinite;
    display: none;
  }

  .wp__status[data-state="loading"] .wp__spinner {
    display: inline-block;
  }

  :root[data-theme="dark"] .wp__spinner {
    background-image: url("../assets/logo-light.svg");
  }

  :root[data-theme="light"] .wp__spinner {
    background-image: url("../assets/logo-dark.svg");
  }

  @media (prefers-color-scheme: dark) {
    :root:not([data-theme="light"]) .wp__spinner {
      background-image: url("../assets/logo-light.svg");
    }
  }

  @keyframes wp-spin {
    from {
      transform: rotate(0deg);
    }
    to {
      transform: rotate(360deg);
    }
  }

  @media (max-width: 420px) {
    .wp__actions {
      flex-direction: column-reverse;
      align-items: stretch;
    }

    .wp__btn {
      width: 100%;
      max-width: none;
    }

    .wp__shell {
      max-height: calc(100vh - 6vh);
    }

    .wp[open] {
      padding: 3vh 0 3vh;
    }
  }
</style>
